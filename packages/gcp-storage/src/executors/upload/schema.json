{
  "version": 2,
  "outputCapture": "direct-nodejs",
  "$schema": "https://json-schema.org/schema",
  "type": "object",
  "title": "upload",
  "description": "Upload files to Google Cloud Storage",
  "properties": {
    "bucket": {
      "type": "string",
      "description": "Bucket to upload to"
    },
    "directory": {
      "type": "string",
      "description": "Directory to upload"
    },
    "directories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Directory to upload"
    },
    "gzip": {
      "type": "boolean",
      "description": "Should the files that are uploaded be gzipped",
      "default": false
    },
    "gzipExtensions": {
      "type": "string",
      "description": "What extensions to gzip",
      "default": "js,css,html"
    }
  },
  "directory": [
    "name"
  ]
}
