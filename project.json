{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "skipCommit": true,
        "syncVersions": true,
        "skipProjectChangelog": true,
        "baseBranch": "master",
        "changelogHeader": " ",
        "commitMessageFormat": "chore(release): v${version}"
      },
      "configurations": {
        "production": {
          "postTargets": [
            "workspace:github",
          ]
        }
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    }
  },
  "tags": [
    "ci=off"
  ]
}
